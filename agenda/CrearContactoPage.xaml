<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="agenda.CrearContactoPage">
    <FlexLayout Direction="Column" AlignItems="Start" JustifyContent="Center" Padding="20">
        <Entry x:Name="NombreEntry" Placeholder="Nombre" WidthRequest="250" />
        <Entry x:Name="TelefonoEntry" Placeholder="Teléfono" WidthRequest="250" />
        <Entry x:Name="CorreoEntry" Placeholder="Correo" WidthRequest="250" />
        <Entry x:Name="DireccionEntry" Placeholder="Dirección" WidthRequest="250" />
        <Button Text="Guardar Contacto" WidthRequest="250" Clicked="OnGuardarClicked" />
    </FlexLayout>
</ContentPage>